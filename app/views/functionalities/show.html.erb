<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900"><%= @functionality.name %></h1>
      <p class="mt-1 text-sm text-gray-500">Functionality details and sub-functionalities</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none flex space-x-3">
      <% if can? :update, @functionality %>
        <%= link_to edit_functionality_path(@functionality), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          Edit
        <% end %>
      <% end %>
      <% if can? :create, SubFunctionality %>
        <%= link_to new_functionality_sub_functionality_path(@functionality), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Sub-Functionality
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Functionality Information</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @functionality.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Code</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= @functionality.code %></code></dd>
        </div>
        <% if @functionality.description.present? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @functionality.description %></dd>
          </div>
        <% end %>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @functionality.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @functionality.active? ? 'Active' : 'Inactive' %>
            </span>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Sub-Functionalities</h3>
        <p class="mt-1 text-sm text-gray-500">A list of all sub-functionalities for this functionality.</p>
      </div>
      <div class="text-sm font-medium text-gray-500">
        <%= pluralize(@sub_functionalities.count, 'sub-functionality') %>
      </div>
    </div>
    <% if @sub_functionalities.any? %>
      <ul class="divide-y divide-gray-200">
        <% @sub_functionalities.each do |sub_functionality| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-8 w-8 rounded bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-semibold text-xs"><%= sub_functionality.name.first.upcase %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= sub_functionality.name %></div>
                    <div class="text-sm text-gray-500">
                      Code: <code class="text-xs bg-gray-100 px-1 rounded"><%= sub_functionality.code %></code>
                      <% if sub_functionality.screen.present? %>
                        â€¢ Screen: <span class="text-gray-400"><%= sub_functionality.screen %></span>
                      <% end %>
                    </div>
                    <% if sub_functionality.description.present? %>
                      <div class="mt-1 text-xs text-gray-400"><%= sub_functionality.description %></div>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= sub_functionality.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= sub_functionality.active? ? 'Active' : 'Inactive' %>
                  </span>
                  <% if can? :update, sub_functionality %>
                    <%= link_to edit_functionality_sub_functionality_path(@functionality, sub_functionality), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do %>
                      Edit
                    <% end %>
                  <% end %>
                  <% if can? :destroy, sub_functionality %>
                    <%= link_to functionality_sub_functionality_path(@functionality, sub_functionality), method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "text-red-600 hover:text-red-900 text-sm font-medium ml-2" do %>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-12 sm:px-6 text-center">
        <p class="text-sm text-gray-500">No sub-functionalities for this functionality.</p>
        <% if can? :create, SubFunctionality %>
          <div class="mt-4">
            <%= link_to new_functionality_sub_functionality_path(@functionality), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Sub-Functionality
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to functionalities_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900" do %>
      <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Functionalities
    <% end %>
  </div>
</div>
