<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900">Functionalities</h1>
      <p class="mt-2 text-sm text-gray-500">Manage system functionalities and their sub-functionalities.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if can? :create, Functionality %>
        <%= link_to new_functionality_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Functionality
        <% end %>
      <% end %>
    </div>
  </div>

  <% if @functionalities.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @functionalities.each do |functionality| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-bold text-sm"><%= functionality.name.first.upcase %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= functionality.name %></div>
                    <div class="text-sm text-gray-500">
                      Code: <span class="font-mono text-xs"><%= functionality.code %></span>
                      <% if functionality.sub_functionalities.any? %>
                        â€¢ <%= pluralize(functionality.sub_functionalities.count, 'sub-functionality') %>
                      <% end %>
                    </div>
                    <% if functionality.description.present? %>
                      <div class="mt-1 text-xs text-gray-400"><%= functionality.description %></div>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <%= link_to functionality_path(functionality), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
                    View
                  <% end %>
                  <% if can? :update, functionality %>
                    <%= link_to edit_functionality_path(functionality), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-yellow-700 bg-yellow-50 hover:bg-yellow-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-colors" do %>
                      Edit
                    <% end %>
                  <% end %>
                  <% if can? :destroy, functionality %>
                    <%= link_to functionality_path(functionality), method: :delete, 
                        data: { confirm: "Are you sure? This will also delete all sub-functionalities." }, 
                        class: "inline-flex items-center px-3 py-1.5 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No functionalities</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new functionality.</p>
      <% if can? :create, Functionality %>
        <div class="mt-6">
          <%= link_to new_functionality_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Functionality
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
