<div class="px-4 sm:px-0">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Edit Sub-Functionality</h1>
    <p class="mt-1 text-sm text-gray-500">Update sub-functionality for <strong><%= @functionality.name %></strong>.</p>
  </div>

  <%= render "form", sub_functionality: @sub_functionality, functionality: @functionality %>

  <div class="mt-6">
    <%= link_to functionality_path(@functionality), class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900" do %>
      <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Functionality
    <% end %>
  </div>
</div>
