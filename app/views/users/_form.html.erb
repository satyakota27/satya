<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= form_with model: @user, local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "user@example.com" %>
          </div>
        </div>

        <% unless @user.persisted? %>
          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.password_field :password, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div>
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.password_field :password_confirmation, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        <% else %>
          <div>
            <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.password_field :password, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Leave blank if you don't want to change it</p>
          </div>

          <div>
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.password_field :password_confirmation, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        <% end %>

        <% if current_user.super_admin? %>
          <div>
            <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.select :role, User.roles.keys.map { |r| [r.humanize, r] }, { selected: @user.role || 'user' }, { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
            </div>
          </div>

          <div>
            <%= form.label :tenant_id, "Tenant", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.select :tenant_id, options_from_collection_for_select(@tenants, :id, :name, @user.tenant_id), { include_blank: "Select a tenant (optional for super admin)" }, { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Super admins don't require a tenant.</p>
          </div>
        <% elsif current_user.tenant_admin? %>
          <%= form.hidden_field :tenant_id, value: current_user.tenant_id %>
          <%= form.hidden_field :role, value: 'user' %>
        <% end %>

        <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", @user.persisted? ? user_path(@user) : users_path, 
              class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
          <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
