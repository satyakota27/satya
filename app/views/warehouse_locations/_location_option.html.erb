<li>
  <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded" style="padding-left: <%= level * 24 + 8 %>px;">
    <button type="button" 
            data-location-id="<%= location.id %>"
            data-location-path="<%= j(location.full_path) %>"
            data-field-id="<%= field_id %>"
            class="location-select-btn flex-1 text-left">
      <div class="text-sm font-medium text-gray-900"><%= location.name %></div>
      <div class="text-xs text-gray-500 font-mono"><%= location.full_path %></div>
    </button>
  </div>
  <% if location.children.active.any? %>
    <ul class="ml-4">
      <% location.children.active.each do |child| %>
        <%= render 'warehouse_locations/location_option', location: child, field_id: field_id, selected_id: selected_id, level: level + 1 %>
      <% end %>
    </ul>
  <% end %>
</li>

