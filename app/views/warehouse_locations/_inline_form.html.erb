<% new_location = WarehouseLocation.new(parent_id: parent_location.id) %>
<%= form_with model: new_location, url: warehouse_locations_path, local: false, data: { turbo: false }, class: "bg-gray-50 p-4 rounded-lg border border-gray-200 space-y-4" do |form| %>
  <%= form.hidden_field :parent_id, value: parent_location.id %>
  
  <div class="flex items-center justify-between mb-2">
    <h4 class="text-sm font-medium text-gray-900">Add Child to: <span class="text-indigo-600"><%= parent_location.name %></span></h4>
    <button type="button" class="cancel-child-form text-xs text-gray-500 hover:text-gray-700" data-form-id="child-form-<%= parent_location.id %>">
      Cancel
    </button>
  </div>
  
  <div class="grid grid-cols-1 gap-4">
    <div>
      <%= form.label :warehouse_location_type_id, "Location Type", class: "block text-xs font-medium text-gray-700" %>
      <%= form.select :warehouse_location_type_id, 
          options_from_collection_for_select(WarehouseLocationType.active.ordered, :id, :name, nil),
          { prompt: "Select location type" },
          { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm text-sm focus:ring-indigo-500 focus:border-indigo-500", required: true } %>
    </div>

    <div>
      <%= form.label :location_code, "Location Code", class: "block text-xs font-medium text-gray-700" %>
      <%= form.text_field :location_code, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm text-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "e.g., ZONE-A", required: true %>
    </div>

    <div>
      <%= form.label :name, "Name", class: "block text-xs font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm text-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "e.g., Zone A", required: true %>
    </div>

    <div>
      <%= form.label :description, "Description", class: "block text-xs font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 2, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm text-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="flex items-center">
      <%= form.check_box :active, { checked: true }, true, false %>
      <%= form.label :active, "Active", class: "ml-2 block text-xs text-gray-900" %>
    </div>
  </div>
  
  <div class="flex items-center justify-end space-x-2 pt-2">
    <button type="button" class="cancel-child-form text-xs px-3 py-1.5 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50" data-form-id="child-form-<%= parent_location.id %>">
      Cancel
    </button>
    <%= form.submit "Add Location", class: "text-xs px-3 py-1.5 border border-transparent rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

