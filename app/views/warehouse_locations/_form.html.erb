<%= form_with model: @warehouse_location, local: true, class: "space-y-6" do |form| %>
  <% if @warehouse_location.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@warehouse_location.errors.count, "error") %> prohibited this location from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @warehouse_location.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :warehouse_location_type_id, "Location Type", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :warehouse_location_type_id, 
              options_from_collection_for_select(@warehouse_location_types, :id, :name, @warehouse_location.warehouse_location_type_id),
              { prompt: "Select location type" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
        </div>

        <div>
          <%= form.label :parent_id, "Parent Location (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :parent_id, 
              options_from_collection_for_select(@parent_locations, :id, :name, @warehouse_location.parent_id),
              { prompt: "None (root location)" },
              { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          <p class="mt-1 text-sm text-gray-500">Leave blank for root locations</p>
        </div>

        <div>
          <%= form.label :location_code, "Location Code", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :location_code, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "e.g., NY001, ZONE-A" %>
          <p class="mt-1 text-sm text-gray-500">Unique code within parent and type</p>
        </div>

        <div>
          <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "e.g., New York, Building 1, Zone A" %>
        </div>

        <div>
          <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="flex items-center">
          <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :active, "Active", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <%= form.submit "Save Location", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm" %>
      <button type="button" 
              onclick="this.closest('.fixed').classList.add('hidden')"
              class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
        Cancel
      </button>
    </div>
  </div>
<% end %>

