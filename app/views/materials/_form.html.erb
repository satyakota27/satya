<%= form_with model: @material, local: true do |form| %>
  <% if @material.errors.any? %>
    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @material.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :description, "Material Description", class: "block text-sm font-medium text-gray-700" do %>
        Material Description <span class="text-red-500">*</span>
      <% end %>
      <div class="mt-1">
        <%= form.text_area :description, rows: 3, required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter material description..." %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= form.label :procurement_unit_id, "Procurement Unit", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex gap-2">
          <%= form.select :procurement_unit_id, 
              options_from_collection_for_select(@unit_of_measurements, :id, :display_name, @material.procurement_unit_id),
              { include_blank: "Select procurement unit" },
              { class: "flex-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
          <button type="button" id="create-procurement-unit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </button>
        </div>
      </div>

      <div>
        <%= form.label :sale_unit_id, "Sale Unit", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex gap-2">
          <%= form.select :sale_unit_id, 
              options_from_collection_for_select(@unit_of_measurements, :id, :display_name, @material.sale_unit_id),
              { include_blank: "Select sale unit" },
              { class: "flex-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
          <button type="button" id="create-sale-unit" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div>
      <div class="flex items-center justify-between">
        <div>
          <div class="flex items-center">
            <%= form.check_box :has_bom, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= form.label :has_bom, "Has Bill Of Material (B.O.M)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Enable to define component materials and quantities</p>
        </div>
      </div>
    </div>

    <!-- BOM Components Section -->
    <div id="bom-components-section" class="<%= 'hidden' unless @material.has_bom %>">
      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">B.O.M Components</h3>
        <div id="bom-components-list" class="space-y-4">
          <% if @material.persisted? && @bom_components %>
            <% @bom_components.each do |bom_component| %>
              <div class="bom-component-row flex flex-col sm:flex-row gap-4 items-stretch sm:items-end p-4 bg-gray-50 rounded-md" data-bom-id="<%= bom_component.id %>">
                <div class="flex-1 min-w-0">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Component material description/code</label>
                  <input type="text" 
                         class="material-search shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" 
                         value="<%= bom_component.component_material.material_code %> - <%= bom_component.component_material.description %>"
                         data-material-id="<%= bom_component.component_material_id %>"
                         placeholder="Search by material code or description..."
                         readonly />
                  <input type="hidden" name="material[bom_component_ids][]" value="<%= bom_component.id %>" />
                  <input type="hidden" name="material[bom_component_material_ids][]" value="<%= bom_component.component_material_id %>" />
                </div>
                <div class="w-full sm:w-32">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                  <input type="number" 
                         step="0.01" 
                         name="material[bom_component_quantities][]" 
                         value="<%= bom_component.quantity %>"
                         class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" 
                         required />
                </div>
                <div class="flex-shrink-0">
                  <button type="button" class="remove-bom-component w-full sm:w-auto inline-flex items-center justify-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100">
                    Remove
                  </button>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <button type="button" id="add-bom-component" class="mt-4 w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Component
        </button>
      </div>
    </div>

    <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
      <%= link_to "Cancel", @material.persisted? ? material_path(@material) : materials_path, 
          class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
    </div>
  </div>
<% end %>

<!-- Unit Creation Modal -->
<div id="unit-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-10 sm:top-20 mx-auto p-4 sm:p-5 border w-full max-w-md mx-4 sm:mx-auto shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Create New Unit of Measurement</h3>
      <%= form_with model: UnitOfMeasurement.new, url: (@material&.id ? material_unit_of_measurements_path(@material) : create_unit_standalone_materials_materials_path), local: false, format: :json, id: "unit-form" do |form| %>
        <div class="space-y-4">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div>
            <%= form.label :abbreviation, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :abbreviation, class: "mt-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div class="flex items-center justify-end space-x-3 pt-4">
            <button type="button" id="cancel-unit-modal" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">
              Cancel
            </button>
            <%= form.submit "Create", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

