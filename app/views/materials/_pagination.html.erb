<% if materials.respond_to?(:current_page) && materials.total_pages > 1 %>
  <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-4">
    <div class="flex-1 flex justify-between sm:hidden">
      <%= link_to materials_path(search: params[:search], state: params[:state], page: materials.prev_page), 
          class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 #{'opacity-50 cursor-not-allowed pointer-events-none' unless materials.prev_page}" do %>
        Previous
      <% end %>
      <%= link_to materials_path(search: params[:search], state: params[:state], page: materials.next_page), 
          class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 #{'opacity-50 cursor-not-allowed pointer-events-none' unless materials.next_page}" do %>
        Next
      <% end %>
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
      <div>
        <p class="text-sm text-gray-700">
          Showing
          <span class="font-medium"><%= materials.offset_value + 1 %></span>
          to
          <span class="font-medium"><%= [materials.offset_value + materials.limit_value, materials.total_count].min %></span>
          of
          <span class="font-medium"><%= materials.total_count %></span>
          results
        </p>
      </div>
      <div>
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          <%= link_to materials_path(search: params[:search], state: params[:state], page: materials.prev_page), 
              class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 #{'opacity-50 cursor-not-allowed pointer-events-none' unless materials.prev_page}" do %>
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
          <% (1..materials.total_pages).each do |page| %>
            <% if page == materials.current_page %>
              <span class="relative inline-flex items-center px-4 py-2 border border-indigo-500 bg-indigo-50 text-sm font-medium text-indigo-600">
                <%= page %>
              </span>
            <% elsif page == 1 || page == materials.total_pages || (page >= materials.current_page - 2 && page <= materials.current_page + 2) %>
              <%= link_to page, materials_path(search: params[:search], state: params[:state], page: page), 
                  class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
            <% elsif page == materials.current_page - 3 || page == materials.current_page + 3 %>
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                ...
              </span>
            <% end %>
          <% end %>
          <%= link_to materials_path(search: params[:search], state: params[:state], page: materials.next_page), 
              class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 #{'opacity-50 cursor-not-allowed pointer-events-none' unless materials.next_page}" do %>
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
<% end %>

