<div>
  <% if @material.rejected? && @material.approver_comments.present? %>
    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md shadow-sm" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">Rejection Comments</h3>
          <div class="mt-2 text-sm text-red-700">
            <p class="whitespace-pre-wrap"><%= @material.approver_comments %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="mb-4 sm:mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Edit Material</h1>
    <p class="mt-1 sm:mt-2 text-sm text-gray-500">
      <% if @material.rejected? %>
        Please review the rejection comments above and make necessary amendments.
      <% else %>
        Update material information.
      <% end %>
    </p>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= render 'form' %>
    </div>
  </div>
</div>

