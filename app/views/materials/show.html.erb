<div>
  <% if @material.rejected? && @material.approver_comments.present? %>
    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md shadow-sm" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">Material Rejected</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>This material has been rejected. Please review the rejection comments below and make necessary amendments.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 sm:mb-6 gap-4">
    <div class="flex-1">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Material Details</h1>
      <p class="mt-1 sm:mt-2 text-sm text-gray-500">View material information and BOM components.</p>
    </div>
    <div class="flex flex-wrap gap-2 sm:flex-nowrap sm:flex-shrink-0">
      <% if can? :update, @material %>
        <%= link_to edit_material_path(@material), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Edit
        <% end %>
      <% end %>
      <% if can?(:approve, @material) && @material.draft? %>
        <button type="button" onclick="document.getElementById('approve-modal').classList.remove('hidden')" 
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          Approve
        </button>
      <% end %>
      <% if can?(:reject, @material) && @material.draft? %>
        <button type="button" onclick="document.getElementById('reject-modal').classList.remove('hidden')" 
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          Reject
        </button>
      <% end %>
      <%= link_to materials_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        Back to List
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Material Code</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @material.material_code || '<span class="text-gray-400">Not assigned (draft)</span>'.html_safe %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">State</dt>
          <dd class="mt-1">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
              if @material.approved?
                'bg-green-100 text-green-800'
              elsif @material.rejected?
                'bg-red-100 text-red-800'
              else
                'bg-yellow-100 text-yellow-800'
              end
            %>">
              <%= @material.state.humanize %>
            </span>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @material.description %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Procurement Unit</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @material.procurement_unit ? @material.procurement_unit.display_name : '<span class="text-gray-400">Not set</span>'.html_safe %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Sale Unit</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @material.sale_unit ? @material.sale_unit.display_name : '<span class="text-gray-400">Not set</span>'.html_safe %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Has BOM</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @material.has_bom ? 'Yes' : 'No' %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @material.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @material.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <% if @material.approved_by %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Approved By</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @material.approved_by.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Approved At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @material.approved_at&.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        <% end %>
        <% if @material.rejected_by %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rejected By</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @material.rejected_by.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rejected At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @material.rejected_at&.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        <% end %>
      </dl>
      
      <% if @material.approver_comments.present? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-900 mb-2">
            <%= @material.approved? ? 'Approval' : 'Rejection' %> Comments
          </h3>
          <div class="bg-<%= @material.approved? ? 'green' : 'red' %>-50 border-l-4 border-<%= @material.approved? ? 'green' : 'red' %>-400 p-4 rounded">
            <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= @material.approver_comments %></p>
          </div>
        </div>
      <% end %>

      <% if @material.has_bom && @material.material_bom_components.any? %>
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-4">BOM Components</h3>
          <!-- Mobile: Card layout -->
          <div class="block sm:hidden space-y-3">
            <% @material.material_bom_components.includes(:component_material).each do |bom_component| %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <div class="mb-2">
                  <span class="text-xs font-medium text-gray-500">Material Code</span>
                  <p class="text-sm font-medium text-gray-900"><%= bom_component.component_material.material_code %></p>
                </div>
                <div class="mb-2">
                  <span class="text-xs font-medium text-gray-500">Description</span>
                  <p class="text-sm text-gray-700"><%= bom_component.component_material.description %></p>
                </div>
                <div>
                  <span class="text-xs font-medium text-gray-500">Quantity</span>
                  <p class="text-sm text-gray-700"><%= bom_component.quantity %></p>
                </div>
              </div>
            <% end %>
          </div>
          <!-- Desktop: Table layout -->
          <div class="hidden sm:block overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-md">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Material Code</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Quantity</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @material.material_bom_components.includes(:component_material).each do |bom_component| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <%= bom_component.component_material.material_code %>
                    </td>
                    <td class="px-3 py-4 text-sm text-gray-500">
                      <%= bom_component.component_material.description %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= bom_component.quantity %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>

      <% if @material_quality_tests.any? %>
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Store Acceptance Quality Tests</h3>
          <!-- Mobile: Card layout -->
          <div class="block sm:hidden space-y-3">
            <% @material_quality_tests.each do |mqt| %>
              <% qt = mqt.quality_test %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <div class="mb-2">
                  <span class="text-xs font-medium text-gray-500">Test Number</span>
                  <p class="text-sm font-medium text-gray-900"><%= qt.test_number %></p>
                </div>
                <div class="mb-2">
                  <span class="text-xs font-medium text-gray-500">Description</span>
                  <p class="text-sm text-gray-700"><%= qt.description %></p>
                </div>
                <div class="mb-2">
                  <span class="text-xs font-medium text-gray-500">Result Type</span>
                  <p class="text-sm text-gray-700 capitalize"><%= qt.result_type %></p>
                </div>
                <% if qt.range? %>
                  <div class="mb-2">
                    <span class="text-xs font-medium text-gray-500">Range</span>
                    <p class="text-sm text-gray-700">
                      <%= qt.lower_limit.present? ? qt.lower_limit : 'N/A' %> - <%= qt.upper_limit.present? ? qt.upper_limit : 'N/A' %>
                    </p>
                  </div>
                <% elsif qt.absolute? %>
                  <div class="mb-2">
                    <span class="text-xs font-medium text-gray-500">Value</span>
                    <p class="text-sm text-gray-700"><%= qt.absolute_value %></p>
                  </div>
                <% end %>
                <% if qt.documents.attached? %>
                  <div>
                    <span class="text-xs font-medium text-gray-500">Documents</span>
                    <p class="text-sm text-green-600">✓ <%= pluralize(qt.documents.count, 'document') %> attached</p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <!-- Desktop: Table layout -->
          <div class="hidden sm:block overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-md">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Test Number</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Result Type</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Limits/Value</th>
                  <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Documents</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @material_quality_tests.each do |mqt| %>
                  <% qt = mqt.quality_test %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <%= qt.test_number %>
                    </td>
                    <td class="px-3 py-4 text-sm text-gray-500">
                      <%= qt.description %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 capitalize">
                      <%= qt.result_type %>
                    </td>
                    <td class="px-3 py-4 text-sm text-gray-500">
                      <% if qt.range? %>
                        <%= qt.lower_limit.present? ? qt.lower_limit : 'N/A' %> - <%= qt.upper_limit.present? ? qt.upper_limit : 'N/A' %>
                      <% elsif qt.absolute? %>
                        <%= qt.absolute_value %>
                      <% else %>
                        N/A
                      <% end %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <% if qt.documents.attached? %>
                        <span class="text-green-600">✓ <%= pluralize(qt.documents.count, 'document') %></span>
                      <% else %>
                        <span class="text-gray-400">None</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Approve Modal -->
<div id="approve-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-full max-w-md mx-4 sm:mx-auto shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Approve Material</h3>
      <%= form_with url: approve_material_path(@material), method: :post, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :approver_comments, "Comments (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :approver_comments, name: 'approver_comments', rows: 4, 
              class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
              placeholder: "Add any comments about this approval..." %>
        </div>
        <div class="flex items-center justify-end space-x-3 pt-4">
          <button type="button" onclick="document.getElementById('approve-modal').classList.add('hidden')" 
              class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">
            Cancel
          </button>
          <%= form.submit "Approve", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Reject Modal -->
<div id="reject-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-full max-w-md mx-4 sm:mx-auto shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Reject Material</h3>
      <%= form_with url: reject_material_path(@material), method: :post, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :approver_comments, "Rejection Comments", class: "block text-sm font-medium text-gray-700 mb-1" do %>
            Rejection Comments <span class="text-red-500">*</span>
          <% end %>
          <%= form.text_area :approver_comments, name: 'approver_comments', rows: 4, required: true,
              class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
              placeholder: "Please provide reasons for rejection..." %>
          <p class="mt-1 text-xs text-gray-500">Comments are required when rejecting a material.</p>
        </div>
        <div class="flex items-center justify-end space-x-3 pt-4">
          <button type="button" onclick="document.getElementById('reject-modal').classList.add('hidden')" 
              class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50">
            Cancel
          </button>
          <%= form.submit "Reject", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

