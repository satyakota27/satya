<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900">Warehouse Location Types</h1>
      <p class="mt-2 text-sm text-gray-500">Define hierarchy levels for your warehouse locations (e.g., Geographic Location, Building, Zone, Rack, Row, Bin).</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if can? :create, WarehouseLocationType %>
        <%= link_to new_warehouse_location_type_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Location Type
        <% end %>
      <% end %>
    </div>
  </div>

  <% if @warehouse_location_types.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @warehouse_location_types.each do |type| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-bold text-sm"><%= type.display_order %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= type.name %></div>
                    <div class="text-sm text-gray-500">
                      Code: <span class="font-mono"><%= type.code %></span>
                      <span class="ml-2">Order: <%= type.display_order %></span>
                      <% unless type.active? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Inactive
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <% if can? :read, type %>
                    <%= link_to type, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                      View
                    <% end %>
                  <% end %>
                  <% if can? :update, type %>
                    <%= link_to edit_warehouse_location_type_path(type), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-yellow-700 bg-yellow-50 hover:bg-yellow-100" do %>
                      Edit
                    <% end %>
                  <% end %>
                  <% if can? :destroy, type %>
                    <%= link_to warehouse_location_type_path(type), method: :delete, 
                        data: { confirm: "Are you sure? This will fail if any locations use this type." }, 
                        class: "inline-flex items-center px-3 py-1.5 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100" do %>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No location types</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating location types to define your warehouse hierarchy.</p>
      <% if can? :create, WarehouseLocationType %>
        <div class="mt-6">
          <%= link_to new_warehouse_location_type_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Location Type
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

