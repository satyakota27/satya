<%# Use nested route for new items, standalone route for edit/update %>
<% form_model = if @inventory_item.persisted?
                  @inventory_item
                elsif @material.present?
                  [@material, @inventory_item]
                else
                  @inventory_item
                end %>
<%= form_with model: form_model, local: true, class: "space-y-6" do |form| %>
  <% if @inventory_item.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@inventory_item.errors.count, "error") %> prohibited this inventory item from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @inventory_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :material_id, "Material", class: "block text-sm font-medium text-gray-700" %>
          <% if @material %>
            <p class="mt-1 text-sm text-gray-900"><%= @material.material_code %> - <%= @material.description %></p>
            <%= form.hidden_field :material_id, value: @material.id %>
          <% else %>
            <%= form.select :material_id, 
                options_from_collection_for_select(@materials, :id, :material_code_with_description, @inventory_item.material_id),
                { prompt: "Select material" },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "inventory_item_material_id" } %>
          <% end %>
        </div>

        <div id="serial-number-field" style="<%= 'display: none;' if @inventory_item.material&.batch? %>">
          <%= form.label :serial_number, "Serial Number (Auto-generated)", class: "block text-sm font-medium text-gray-700" %>
          <% if @inventory_item.persisted? && @inventory_item.serial_number.present? %>
            <p class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 px-3 py-2 rounded-md border border-gray-300"><%= @inventory_item.serial_number %></p>
          <% else %>
            <p class="mt-1 text-sm text-gray-500 italic">Will be auto-generated upon save</p>
          <% end %>
          <%= form.hidden_field :serial_number, value: @inventory_item.serial_number if @inventory_item.serial_number.present? %>
        </div>

        <div id="batch-number-field" style="<%= 'display: none;' if @inventory_item.material&.unit? %>">
          <%= form.label :batch_number, "Batch Number (Auto-generated)", class: "block text-sm font-medium text-gray-700" %>
          <% if @inventory_item.persisted? && @inventory_item.batch_number.present? %>
            <p class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 px-3 py-2 rounded-md border border-gray-300"><%= @inventory_item.batch_number %></p>
          <% else %>
            <p class="mt-1 text-sm text-gray-500 italic">Will be auto-generated upon save</p>
          <% end %>
          <%= form.hidden_field :batch_number, value: @inventory_item.batch_number if @inventory_item.batch_number.present? %>
        </div>

        <div>
          <%= form.label :quantity, "Quantity", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity, min: 1, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <%= render 'warehouse_locations/location_picker', 
            field_name: 'inventory_item[warehouse_location_id]', 
            field_id: 'inventory_item_warehouse_location_id',
            selected_location: @inventory_item.warehouse_location %>

        <div id="legacy-serial-field" style="<%= 'display: none;' if @inventory_item.material&.batch? %>">
          <%= form.label :legacy_serial_id, "Legacy Serial ID", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :legacy_serial_id, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Original serial number from legacy system" %>
        </div>

        <div id="legacy-batch-field" style="<%= 'display: none;' if @inventory_item.material&.unit? %>">
          <%= form.label :legacy_batch_number, "Legacy Batch Number", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :legacy_batch_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Original batch number from legacy system" %>
        </div>

        <div>
          <%= form.label :purchase_date, "Purchase Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :purchase_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :expiry_date, "Expiry Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :expiry_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :cost, "Cost", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :cost, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "0.00" %>
        </div>

        <div>
          <%= form.label :supplier, "Supplier", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :supplier, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Supplier name" %>
        </div>

        <div>
          <%= form.label :notes, "Notes", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <%= form.submit "Save Inventory Item", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm" %>
      <% if @material %>
        <%= link_to "Cancel", material_inventory_items_path(@material), class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
      <% else %>
        <%= link_to "Cancel", inventory_items_path, class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
      <% end %>
    </div>
  </div>
<% end %>


