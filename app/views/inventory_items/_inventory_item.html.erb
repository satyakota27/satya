<li>
  <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-colors">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center">
          <div class="text-sm font-medium text-gray-900">
            <%= link_to item.material.material_code, item.material, class: "text-indigo-600 hover:text-indigo-900" %>
          </div>
          <span class="ml-2 text-sm text-gray-500">-</span>
          <span class="ml-2 text-sm text-gray-700"><%= item.material.description %></span>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500 space-x-4">
          <% if item.serial_number.present? %>
            <span>Serial: <span class="font-mono"><%= item.serial_number %></span></span>
          <% end %>
          <% if item.batch_number.present? %>
            <span>Batch: <span class="font-mono"><%= item.batch_number %></span></span>
          <% end %>
          <span>Qty: <span class="font-semibold"><%= item.quantity %></span></span>
          <% if item.warehouse_location.present? %>
            <span>Location: <span class="font-mono text-indigo-600"><%= item.warehouse_location.full_path %></span></span>
          <% end %>
        </div>
        <% if item.legacy_serial_id.present? || item.legacy_batch_number.present? %>
          <div class="mt-1 text-xs text-gray-400">
            Legacy: 
            <% if item.legacy_serial_id.present? %>
              SN: <%= item.legacy_serial_id %>
            <% end %>
            <% if item.legacy_batch_number.present? %>
              Batch: <%= item.legacy_batch_number %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to item, class: "text-xs text-indigo-600 hover:text-indigo-900" do %>
          View
        <% end %>
        <% if can? :update, item %>
          <%= link_to edit_inventory_item_path(item), class: "text-xs text-yellow-600 hover:text-yellow-900" do %>
            Edit
          <% end %>
        <% end %>
        <% if can? :destroy, item %>
          <%= link_to inventory_item_path(item), method: :delete, 
              data: { confirm: "Are you sure?" }, 
              class: "text-xs text-red-600 hover:text-red-900" do %>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</li>

