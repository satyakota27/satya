<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900">Process Step Details</h1>
      <p class="mt-2 text-sm text-gray-500">View process step information.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if can? :update, @process_step %>
        <%= link_to edit_process_step_path(@process_step), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          Edit
        <% end %>
      <% end %>
      <%= link_to process_steps_path, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        Back to Process Steps
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Process Code</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @process_step.process_code %></dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @process_step.description %></dd>
        </div>
        <% if @process_step.estimated_days.present? || @process_step.estimated_hours.present? || @process_step.estimated_minutes.present? || @process_step.estimated_seconds.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Estimated Process Time</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% time_parts = [] %>
              <% time_parts << "#{@process_step.estimated_days} days" if @process_step.estimated_days.to_i > 0 %>
              <% time_parts << "#{@process_step.estimated_hours} hours" if @process_step.estimated_hours.to_i > 0 %>
              <% time_parts << "#{@process_step.estimated_minutes} minutes" if @process_step.estimated_minutes.to_i > 0 %>
              <% time_parts << "#{@process_step.estimated_seconds} seconds" if @process_step.estimated_seconds.to_i > 0 %>
              <%= time_parts.any? ? time_parts.join(', ') : 'Not specified' %>
            </dd>
          </div>
        <% end %>
        <% if @process_step.quality_tests.any? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Quality Tests</dt>
            <dd class="mt-1">
              <ul class="list-disc list-inside space-y-1">
                <% @process_step.quality_tests.each do |qt| %>
                  <li>
                    <%= link_to "#{qt.test_number} - #{qt.description}", quality_test_path(qt), class: "text-indigo-600 hover:text-indigo-800" %>
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
        <% if @process_step.documents.attached? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Attached Documents</dt>
            <dd class="mt-1">
              <ul class="list-disc list-inside space-y-1">
                <% @process_step.documents.each do |document| %>
                  <li>
                    <%= link_to document.filename, rails_blob_path(document, disposition: "attachment"), class: "text-indigo-600 hover:text-indigo-800" %>
                    (<%= number_to_human_size(document.byte_size) %>)
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
        <% if @process_step.materials.any? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Materials Using This Process Step</dt>
            <dd class="mt-1">
              <ul class="list-disc list-inside space-y-1">
                <% @process_step.materials.each do |material| %>
                  <li>
                    <%= link_to "#{material.material_code || 'Draft'} - #{material.description}", material_path(material), class: "text-indigo-600 hover:text-indigo-800" %>
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @process_step.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @process_step.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>

