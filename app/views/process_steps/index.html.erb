<div class="px-4 sm:px-0">
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold text-gray-900">Process Steps</h1>
      <p class="mt-2 text-sm text-gray-500">Manage manufacturing process steps.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <% if can? :create, ProcessStep %>
        <%= link_to new_process_step_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Process Step
        <% end %>
      <% end %>
      <%= link_to materials_path, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        Materials
      <% end %>
    </div>
  </div>

  <% if @process_steps.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @process_steps.each do |step| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-bold text-sm"><%= step.process_code.first.upcase %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= step.process_code %></div>
                    <div class="text-sm text-gray-500">
                      <%= truncate(step.description, length: 100) %>
                    </div>
                    <% if step.estimated_days.present? || step.estimated_hours.present? || step.estimated_minutes.present? || step.estimated_seconds.present? %>
                      <div class="text-xs text-gray-400 mt-1">
                        Estimated: 
                        <%= [step.estimated_days, step.estimated_hours, step.estimated_minutes, step.estimated_seconds].compact.map.with_index { |val, idx| "#{val} #{['days', 'hours', 'minutes', 'seconds'][idx]}" if val.to_i > 0 }.compact.join(', ') %>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <% if can? :read, step %>
                    <%= link_to process_step_path(step), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                      View
                    <% end %>
                  <% end %>
                  <% if can? :update, step %>
                    <%= link_to edit_process_step_path(step), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-yellow-700 bg-yellow-50 hover:bg-yellow-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-colors" do %>
                      Edit
                    <% end %>
                  <% end %>
                  <% if can? :destroy, step %>
                    <%= link_to process_step_path(step), method: :delete, 
                        data: { confirm: "Are you sure you want to delete this process step?" }, 
                        class: "inline-flex items-center px-3 py-1.5 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No process steps</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new process step.</p>
      <% if can? :create, ProcessStep %>
        <div class="mt-6">
          <%= link_to new_process_step_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Process Step
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

