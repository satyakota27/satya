<%= form_with model: @process_step, local: true, url: (@process_step.new_record? ? process_steps_path : process_step_path(@process_step)) do |form| %>
  <% if @process_step.errors.any? %>
    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@process_step.errors.count, "error") %> prohibited this process step from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @process_step.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" do %>
        Description <span class="text-red-500">*</span>
      <% end %>
      <div class="mt-1">
        <%= form.text_area :description, rows: 4, required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter a detailed description of the process step..." %>
      </div>
      <p class="mt-1 text-sm text-gray-500">Describe the manufacturing process step.</p>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-3">Estimated Process Time</label>
      <div class="flex flex-wrap gap-2 sm:gap-3 items-end">
        <div class="flex-1 min-w-[70px] sm:min-w-[90px]">
          <%= form.label :estimated_days, "Days", class: "block text-xs font-medium text-gray-600 mb-1" %>
          <%= form.number_field :estimated_days, min: 0, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full text-sm border-gray-300 rounded-md", placeholder: "0" %>
        </div>
        <div class="flex-1 min-w-[70px] sm:min-w-[90px]">
          <%= form.label :estimated_hours, "Hours", class: "block text-xs font-medium text-gray-600 mb-1" %>
          <%= form.number_field :estimated_hours, min: 0, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full text-sm border-gray-300 rounded-md", placeholder: "0" %>
        </div>
        <div class="flex-1 min-w-[70px] sm:min-w-[90px]">
          <%= form.label :estimated_minutes, "Minutes", class: "block text-xs font-medium text-gray-600 mb-1" %>
          <%= form.number_field :estimated_minutes, min: 0, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full text-sm border-gray-300 rounded-md", placeholder: "0" %>
        </div>
        <div class="flex-1 min-w-[70px] sm:min-w-[90px]">
          <%= form.label :estimated_seconds, "Seconds", class: "block text-xs font-medium text-gray-600 mb-1" %>
          <%= form.number_field :estimated_seconds, min: 0, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full text-sm border-gray-300 rounded-md", placeholder: "0" %>
        </div>
      </div>
      <p class="mt-2 text-xs text-gray-500">Enter values for the estimated process time duration</p>
    </div>

    <!-- Quality Tests Section -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Quality Tests (Optional)</label>
      <p class="text-xs text-gray-500 mb-4">You can attach 0 or more quality tests to this process step.</p>
      
      <div id="quality-tests-list" class="space-y-4">
        <!-- Quality tests will be added here dynamically -->
        <% if @process_step.persisted? && @process_step.quality_tests.any? %>
          <% @process_step.process_step_quality_tests.each_with_index do |psqt, index| %>
            <% qt = psqt.quality_test %>
            <div class="quality-test-row flex flex-col sm:flex-row gap-4 items-stretch sm:items-end p-4 bg-gray-50 rounded-md" 
                 data-test-index="<%= index + 1 %>" 
                 data-added="true" 
                 data-initialized="true"
                 data-quality-test-association-id="<%= psqt.id %>">
              <div class="flex-1 min-w-0">
                <label class="block text-sm font-medium text-gray-700 mb-1">Quality test description/code</label>
                <input type="text" 
                       class="quality-test-search shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md bg-gray-100 text-gray-600" 
                       value="<%= qt.test_number %> - <%= qt.description %>"
                       readonly />
                <input type="hidden" class="quality-test-id" name="process_step[quality_test_ids][]" value="<%= qt.id %>" />
              </div>
              <div class="flex-shrink-0">
                <div class="flex gap-2">
                  <button type="button" class="edit-quality-test w-full sm:w-auto inline-flex items-center justify-center px-3 py-2 border border-indigo-300 shadow-sm text-sm font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-100">
                    Edit
                  </button>
                  <button type="button" class="remove-quality-test w-full sm:w-auto inline-flex items-center justify-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100">
                    Remove
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <button type="button" id="add-quality-test" class="mt-4 w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Quality Test
      </button>
    </div>

    <!-- File Upload -->
    <div>
      <%= form.label :documents, "Attach documents (PDF or images, â‰¤ 5MB each)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :documents, multiple: true, accept: ".pdf,.jpg,.jpeg,.png,.gif,.webp", id: "process-step-file-input", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      <p class="mt-1 text-xs text-gray-500">You can select multiple files. Each file must be a PDF or image and less than 5MB.</p>
      
      <!-- Uploaded documents -->
      <div class="mt-4 <%= 'hidden' unless @process_step.persisted? && @process_step.documents.attached? %>" id="uploaded-documents-section">
        <p class="text-sm font-medium text-gray-700 mb-2">Uploaded documents:</p>
        <ul id="uploaded-documents" class="space-y-2">
          <% if @process_step.persisted? && @process_step.documents.attached? %>
            <% @process_step.documents.each do |document| %>
              <li class="flex items-center justify-between p-2 bg-green-50 rounded-md border border-green-200" data-document-id="<%= document.id %>">
                <div class="flex items-center space-x-2">
                  <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= link_to document.filename, rails_blob_path(document, disposition: "attachment"), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
                  <span class="text-xs text-gray-500">(<%= number_to_human_size(document.byte_size) %>)</span>
                </div>
                <button type="button" class="remove-document-server text-red-600 hover:text-red-800 text-sm font-medium bg-transparent border-0 p-0 cursor-pointer" data-document-id="<%= document.id %>">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Hidden field to store temporary process step ID -->
    <% if @process_step.persisted? %>
      <%= form.hidden_field :id, value: @process_step.id %>
    <% else %>
      <%= form.hidden_field :temp_id, id: "process-step-temp-id", value: "" %>
    <% end %>

    <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
      <%= link_to "Cancel", process_steps_path, 
          class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
    </div>
  </div>
<% end %>

