<%= form_with model: [@material, @unit_of_measurement], local: true do |form| %>
  <% if @unit_of_measurement.errors.any? %>
    <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@unit_of_measurement.errors.count, "error") %> prohibited this unit from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @unit_of_measurement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "e.g., Kilogram" %>
      </div>
    </div>

    <div>
      <%= form.label :abbreviation, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :abbreviation, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "e.g., kg" %>
      </div>
    </div>

    <div>
      <div class="flex items-center">
        <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= form.label :active, "Active", class: "ml-2 block text-sm text-gray-900" %>
      </div>
      <p class="mt-1 text-sm text-gray-500">Inactive units won't appear in selection dropdowns.</p>
    </div>

    <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
      <% material = @material || Material.first %>
      <%= link_to "Cancel", material ? material_unit_of_measurements_path(material) : materials_path, 
          class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
    </div>
  </div>
<% end %>

